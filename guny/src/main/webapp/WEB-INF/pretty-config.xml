<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

	<url-mapping id="login">
		<pattern value="/login" />
		<view-id value="/login.xhtml" />
	</url-mapping>

	<url-mapping id="index">
		<pattern value="/index" />
		<view-id value="/index.xhtml" />
	</url-mapping>

	<url-mapping id="search">
		<pattern value="/search" />
		<view-id value="/search.xhtml" />
	</url-mapping>
	
	<url-mapping id="order">
		<pattern value="/order" />
		<view-id value="/order.xhtml" />
	</url-mapping>
	
	<url-mapping id="message">
		<pattern value="/message" />
		<view-id value="/message.xhtml" />
	</url-mapping>
	
	<url-mapping id="how-stuff-works">
		<pattern value="/how-stuff-works" />
		<view-id value="/how-stuff-works.xhtml" />
	</url-mapping>
	
	<url-mapping id="order-describe">
    	<pattern value="/order/#{orderMB.orderForm.category}" />
    	<view-id value="/order-describe.xhtml" />
    	<action>#{orderMB.loadDataOrder}</action>
	</url-mapping>

</pretty-config>